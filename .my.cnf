# Configuration MySQL pour le script de sauvegarde GLPI
# Fichier à placer dans : ~/.my.cnf
# Permissions requises : chmod 600 ~/.my.cnf
#
# Ce fichier permet d'éviter de passer les identifiants MySQL
# en paramètres de ligne de commande (sécurité renforcée)

[client]
# Utilisateur MySQL avec les droits de lecture sur la base GLPI
user=YOUR_MYSQL_USERNAME

# Mot de passe de l'utilisateur MySQL
password=YOUR_MYSQL_PASSWORD

# Serveur MySQL (généralement localhost)
host=localhost

# Port MySQL (par défaut 3306)
port=3306

# Encodage par défaut
default-character-set=utf8mb4

# Options supplémentaires pour mysqldump
[mysqldump]
# Force l'utilisation d'une seule transaction (cohérence des données)
single-transaction=true

# Inclure les routines (procédures stockées et fonctions)
routines=true

# Inclure les triggers
triggers=true

# Ajouter les instructions DROP TABLE IF EXISTS
add-drop-table=true

# Ajouter les instructions de verrouillage
add-locks=true

# Désactiver les vérifications de clés étrangères pendant l'import
# (améliore les performances de restauration)
disable-keys=true

# Encodage pour le dump
default-character-set=utf8mb4

# Options de compression (si supportées par votre version MySQL)
# compress=true
